<div class="q-pa-md q-gutter-sm">
          <q-dialog v-model="persistent" persistent transition-show="scale" transition-hide="scale">
            <q-card class="bg-red text-white" style="width: 300px">
              <q-card-section>
                <div class="text-h6">Delete</div>
              </q-card-section>

              <q-card-section class="q-pt-none">
                Do you really want to delete your post?
              </q-card-section>

              <q-card-actions align="right" class="bg-white text-teal">
                <q-btn flat label="NO" v-close-popup />
                <q-btn  push color="red" label="Delete" type="Delete"
                :to="{ name: 'PostDelete', params: { id: response.id }}"/>
              </q-card-actions>
            </q-card>
          </q-dialog>
        </div>

         <q-btn class="q-pl-sm q-pr-sm" push color="dark" label="Back" :to="{ name: 'PostList'}" />


         position="top-right" :offset="[38, 18]

         {{ response.content }}





         <template>
  <q-page>
  <q-banner inline-actions class="text-white bg-red">
   Your Post has been Deleted
    <template v-slot:action>
      <q-btn flat color="white" label="ok" :to="{name: 'PostList'}"/>
    </template>
  </q-banner>
  <div class="row justify-center q-pt-xl">
  <q-img src="https://image.flaticon.com/icons/svg/1632/1632602.svg"
  style="width: 200px; height: 200px;"/></div>
  </q-page>
</template>

<style lang="scss" scoped>
.my-card{
  width: 100%;
  max-width: 750px;
  min-height: 400px;
}
</style>

<script>
import handleApi from '../../helper/handleApi'

export default {
  name: 'Postdelete',
  data () {
    return {
      response: []
    }
  },

  created () {
    const self = this
    // eslint-disable-next-line dot-notation
    handleApi('deletePost', {
      id: this.$route.params.id,
      onSuccess ({ data }) {
        self.response = data
        console.log(self.response)
      },
      onError (err) {
        console.log(err)
      }
    }
    )
  }
}
</script>
